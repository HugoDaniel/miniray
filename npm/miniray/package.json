{
  "name": "miniray",
  "version": "0.1.0",
  "description": "WGSL minifier for WebGPU shaders - WebAssembly build",
  "main": "lib/main.js",
  "module": "esm/browser.js",
  "browser": {
    "./lib/main.js": "./lib/browser.js"
  },
  "types": "lib/main.d.ts",
  "bin": {
    "miniray": "bin/miniray"
  },
  "exports": {
    ".": {
      "browser": {
        "import": "./esm/browser.js",
        "default": "./lib/browser.js"
      },
      "node": {
        "import": "./esm/node.mjs",
        "require": "./lib/main.js"
      },
      "default": "./lib/main.js"
    },
    "./wasm": "./miniray.wasm"
  },
  "files": [
    "lib",
    "esm",
    "bin",
    "miniray.wasm",
    "wasm_exec.js"
  ],
  "keywords": [
    "wgsl",
    "webgpu",
    "minifier",
    "shader",
    "wasm",
    "webassembly",
    "gpu",
    "miniray"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HugoDaniel/miniray"
  },
  "homepage": "https://github.com/HugoDaniel/miniray",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  }
}
